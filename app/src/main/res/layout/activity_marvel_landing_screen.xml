<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_landing_screen"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_marvel"
        android:layout_width="@dimen/width_img_landing_screen"
        android:layout_height="@dimen/height_img_landing_screen"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_img_landing_screen"
        android:src="@drawable/marvel_logo" />

    <ProgressBar
        android:id="@+id/progress_bar_landing_screen"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_progress_bar_landing_screen"
        android:indeterminateTint="@color/marvel_red_progress_bar"
        android:indeterminateTintMode="src_atop" />

</LinearLayout>